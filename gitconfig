[user]
  name = Ray Grasso
  email = ray.grasso@gmail.com
[color]
  ui = auto
[core]
  excludesfile = ~/.cvsignore
  editor = /usr/local/bin/vim
  quotepath = false
[push]
    default = tracking
[pull]
    default = current
[diff]
  tool = Kaleidoscope
  memonicprefix = true
[difftool]
  prompt = false
[github]
  user = grassdog
[mergetool "sourcetree"]
  cmd = /Applications/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
  trustExitCode = true
[merge]
  tool = Kaleidoscope
[credential]
  helper = osxkeychain
[difftool "Kaleidoscope"]
  cmd = ksdiff --partial-changeset --relative-path \"$MERGED\" -- \"$LOCAL\" \"$REMOTE\"
[mergetool "Kaleidoscope"]
  cmd = ksdiff --merge --output \"$MERGED\" --base \"$BASE\" -- \"$LOCAL\" --snapshot \"$REMOTE\" --snapshot
  trustExitCode = true
[mergetool]
  prompt = false
[alias]
  unstage = reset HEAD

  # List commands
  ls = log --graph --pretty=format:"%C(yellow)%h%Cblue%d%Creset\\ %s\\ %C(green)\\ %an,\\ %ar%Creset"

  # List with patches
  ll = log --graph --pretty=format:"%C(yellow)%h%Cblue%d%Creset\\ %s\\ %C(green)\\ %an,\\ %ar%Creset" -p

  # List with files changed
  lf = log --graph --pretty=format:"%C(yellow)%h%Cblue%d%Creset\\ %s\\ %C(green)\\ %an,\\ %ar%Creset" --numstat

  # No colour
  lnc = log --pretty=format:"%h\\ %s\\ [%cn]"

  # Details of last commit
  dl = "!git ll -1"

  # Follow file (history on a single file)
  ff = log --follow -p

  # File log (diff details with commit log)
  filelog = log -u
  fl = log -u

  # Diff
  dlc = diff --cached HEAD^
  dtlc = difftool --cached HEAD^

  # Diff a revision
  dr  = "!f() { git diff "$1"^.."$1"; }; f"
  diffr  = "!f() { git diff "$1"^.."$1"; }; f"
  dtr = "!f() { git difftool "$1"^.."$1"; }; f"

  # List aliases
  la = "!git config -l | grep alias | cut -c 7-"

  # Run ctags command
  ctags = !.git/hooks/ctags

  # Safer pull
  update = "!git remote update -p; git merge --ff-only @{u}"

[init]
  templatedir = ~/.git_template
[filter "media"]
	clean = git-media-clean %f
	smudge = git-media-smudge %f
